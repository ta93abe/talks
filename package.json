{
	"name": "talks",
	"version": "1.0.0",
	"description": "Presentation slides repository using Slidev",
	"private": true,
	"scripts": {
		"dev": "deno run --allow-read --allow-run scripts/select-presentation.ts dev",
		"build": "deno run --allow-read --allow-run scripts/select-presentation.ts build",
		"export": "deno run --allow-read --allow-run scripts/select-presentation.ts export",
		"build:all": "pnpm -r build",
		"export:all": "pnpm -r export",
		"lint": "biome lint .",
		"lint:fix": "biome lint --fix .",
		"format": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --fix ."
	},
	"keywords": [
		"slidev",
		"presentations",
		"talks"
	],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.17.0",
	"volta": {
		"node": "22.19.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4"
	}
}
